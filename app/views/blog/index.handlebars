<div class="container">
	<div class="row">
		{{#page.posts}}
		<div class="col-lg-12 col-md-12 col-sm-12 col-xm-12">
			<h1>{{title}}</h1>
			<div class="post-content">
				{{#if image}}
				<div class="featured-image">
					{{image}}
				</div>
				{{/if}}
				<div class="contents">
					{{content}}
				</div>
			</div>
		</div>
		{{else}}
		<div class="col-lg-12 col-md-12 col-sm-12 col-xm-12">
			<h1><i class="fa fa-warning"></i> No Blogs Found!</h1>
			<a href="/blog/add"> <i class="fa fa-plus"></i> Click here to add new blog</a>
		</div>
		{{/page.posts}}
	</div>
</div>	