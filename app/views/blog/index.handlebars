<div class="container">
	<div class="row">
		{{#posts}}
		<div class="col-lg-12 col-md-12 col-sm-12 col-xm-12">
			<h1>{{title}}</h1>
			<div class="post-meta btn-group">
				<span class="btn btn-success btn-xs post-date">@</span>
				<span class="btn btn-primary btn-xs post-author">{{author}}</span>
			</div>
			<div class="post-content">
				{{#if image}}
				<div class="featured-image">
					{{image}}
				</div>
				{{/if}}
				<div class="post-contents">
					{{breaklines content}}
				</div>
				<div class="post-options">
					<a href="/blog/edit/{{_id}}" class="btn btn-success btn-xs"> <i class="fa fa-pencil"></i> Edit Post</a>
					<a href="/blog/edit/{{_id}}" class="btn btn-default btn-xs"> <i class="fa fa-times"></i> Delete Post</a>
				</div>
			</div>
		</div>
		{{else}}
		<div class="col-lg-12 col-md-12 col-sm-12 col-xm-12">
			<h1><i class="fa fa-warning"></i> No Blogs Found!</h1>
		</div>
		{{/posts}}
		
	</div>
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xm-12">
			<div class="blog-main-options btn-group pull-right">
				<a href="/blog/add" class="btn btn-default"><i class="fa fa-plus"></i></a>
				<a href="/blog/add" class="btn btn-primary">Add New Blog</a>
			</div>
		</div>
	</div>
</div>	